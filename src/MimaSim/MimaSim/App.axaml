<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MimaSim"
             x:Class="MimaSim.App"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://MimaSim/Styles.axaml" />
        <StyleInclude Source="avares://MimaSim/Styles/ContentDialogStyle.axaml" />
        <StyleInclude Source="avares://MimaSim/Styles/DialogControlStyle.axaml" />
        <StyleInclude Source="avares://MimaSim/Styles/ExecutionBarStyle.axaml" />
        <StyleInclude Source="avares://MimaSim/Styles/MapTableControlStyle.axaml" />
        <StyleInclude Source="avares://MimaSim/Styles/ButtonStyles.axaml" />

        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <StyleInclude Source="avares://AvaloniaHex/Themes/Simple/AvaloniaHex.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>