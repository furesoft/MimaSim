<Styles xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MimaSim.Controls">
  <Style Selector="controls|ExecutionBar ToggleButton Image.tbchecked">
    <Setter Property="IsVisible" Value="false" />
  </Style>
  <Style Selector="controls|ExecutionBar ToggleButton:checked Image.tbchecked">
    <Setter Property="IsVisible" Value="true" />
  </Style>
  <Style Selector="controls|ExecutionBar ToggleButton Image.tbunchecked">
    <Setter Property="IsVisible" Value="true" />
  </Style>
  <Style Selector="controls|ExecutionBar ToggleButton:checked Image.tbunchecked">
    <Setter Property="IsVisible" Value="false" />
  </Style>
</Styles>