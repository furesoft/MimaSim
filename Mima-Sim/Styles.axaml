<Styles xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:MimaSim.Controls.MimaComponents;assembly=MimaSim"
             xmlns:me="clr-namespace:MimaSim.MarkupExtensions"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Style Selector="c|RegisterControl">
    <Setter Property="Background" Value="LightGray" />
  </Style>

  <Style Selector="Button.clickable">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="Button.clickable:pointerover">
    <Setter Property="Cursor" Value="Hand" />
  </Style>
</Styles>