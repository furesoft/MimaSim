<Styles xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MimaSim.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

  <Style Selector="controls|ContentDialog">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Grid>
            <ContentPresenter Content="{TemplateBinding Content}" />
            <Rectangle IsVisible="{TemplateBinding IsOpened}" Fill="Gray" Opacity="0.5">
            </Rectangle>
          </Grid>

          <Border Margin="50" BorderBrush="Black" BorderThickness="1" IsVisible="{TemplateBinding IsOpened}" Background="White">
            <ContentPresenter  Content="{TemplateBinding DialogContent}" HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>