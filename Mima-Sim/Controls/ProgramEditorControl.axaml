<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:me="clr-namespace:MimaSim.MarkupExtensions"
             xmlns:c="clr-namespace:MimaSim.Controls;assembly=MimaSim"
             xmlns:core="clr-namespace:MimaSim.Core;assembly=MimaSim"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MimaSim.Controls.ProgramEditorControl">
  <Grid ColumnDefinitions="AUTO,*,AUTO" RowDefinitions="35,*">
    <c:ExecutionBar Grid.Column="0" Grid.Row="0" Margin="5,3,0,0" />

    <ComboBox x:Name="languageCb" Grid.Row="0" Grid.Column="2" SelectedIndex="0" MinWidth="110" HorizontalAlignment="Right"  VerticalAlignment="Bottom">
      <ComboBoxItem>Maschinencode</ComboBoxItem>
      <ComboBoxItem>Assembly</ComboBoxItem>
      <ComboBoxItem>Hochsprache</ComboBoxItem>
    </ComboBox>

    <TextBox Name="srcTB" MinWidth="150" MinHeight="150" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,5,0,5">
      2A 00 00 42 02 /* Setze X */
      2A 00 00 08 03 /* Setze Y */
      5A /* Addiere beide zahlen */
    </TextBox>
  </Grid>
</UserControl>