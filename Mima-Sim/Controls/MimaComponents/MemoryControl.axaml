<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:MimaSim.Controls.MimaComponents;assembly=MimaSim"
             xmlns:b="clr-namespace:MimaSim.Core;assembly=MimaSim"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MimaSim.Controls.MimaComponents.MemoryControl" Width="100" Height="75">
  <Grid ColumnDefinitions="20,*,20" RowDefinitions="*,20">
    <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" Grid.Row="0">
      <Button Classes="clickable" Command="{Binding OpenMemoryPopupCommand}">Speicher</Button>
    </Border>
  </Grid>
</UserControl>