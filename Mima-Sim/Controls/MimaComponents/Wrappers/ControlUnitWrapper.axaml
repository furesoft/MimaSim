<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:b="clr-namespace:MimaSim.Core;assembly=MimaSim"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:c="clr-namespace:MimaSim.Controls;assembly=MimaSim"
             Width="100" Height="300"
             x:Class="MimaSim.Controls.Wrappers.ControlUnitWrapper">

  <Canvas>
    <c:ClockControl Name="clock" Canvas.Top="5" Canvas.Left="5" Width="35" Height="35" ToolTip.Tip="{Binding ElementName=clock, Path=Tag}" Tag="2.4Ghz" />

    <c:ControlUnitControl Canvas.Top="0" Canvas.Left="0" Width="100" Height="220" />

    <c:BusControl b:BusRegistry.Id="controlunit_ir" Canvas.Left="10" Canvas.Top="220" Width="15" Height="25" State="None" />
    <c:BusControl b:BusRegistry.Id="controlunit_iar" Canvas.Left="75" Canvas.Top="220" Width="15" Height="25" State="None" />

    <c:RegisterControl Register="IR" Canvas.Left="0" Canvas.Top="245" />
    <c:RegisterControl Register="IAR" Canvas.Left="65" Canvas.Top="245" />
  </Canvas>
</UserControl>