<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:MimaSim.Controls;assembly=MimaSim"
             xmlns:b="clr-namespace:MimaSim.Core;assembly=MimaSim"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MimaSim.Controls.AluControl" Width="125" Height="125">
  <Grid RowDefinitions="25,*,25" ColumnDefinitions="25,25,25">
    <c:BusControl b:BusRegistry.Id="alu_output" Name="outputBus" Width="15" Grid.Row="0" Grid.Column="1"  State="None" />

    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.ColumnSpan="3">
      <TextBlock Text="ALU" TextAlignment="Center" VerticalAlignment="Center" />
    </Border>

    <c:BusControl b:BusRegistry.Id="alu_x_input" Name="firstInputBus" Width="15" Grid.Row="2"  Grid.Column="0" State="None" />
    <c:BusControl b:BusRegistry.Id="alu_x_input" Name="secondInputBus" Width="15" Grid.Row="2" Grid.Column="2" State="None" />
  </Grid>
</UserControl>