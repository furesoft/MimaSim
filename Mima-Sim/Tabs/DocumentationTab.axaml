<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MimaSim.Tabs.DocumentationTab">
  <Grid>
    <TextBlock Text="Dokumentation" TextAlignment="Center" FontSize="33" FontStyle="Oblique" FontWeight="Bold" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
      <TextBlock Text="Sprache" FontSize="22" VerticalAlignment="Center" />

      <ComboBox Name="languageSelectorCb" SelectedIndex="0" Margin="5,0,0,0">
        <ComboBoxItem>Maschinencode</ComboBoxItem>
        <ComboBoxItem>Assemblycode</ComboBoxItem>
        <ComboBoxItem>Hochsprache</ComboBoxItem>
      </ComboBox>
    </StackPanel>

    <Grid Name="markdownRenderPanel"></Grid>
  </Grid>
</UserControl>